<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cong_viec_view_form" model="ir.ui.view">
            <field name="name">cong.viec.form</field>
            <field name="model">cong.viec</field>
            <field name="arch" type="xml">
                <form string="Công việc">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="0,1,2"/>
                        <button name="confirm" string="Xác nhận" type="object" attrs="{'invisible':[('state', 'in', ('3','2','1'))]}"/>
                        <button name="done" string="Hoàn thành" type="object" attrs="{'invisible':[('state', 'in', ('0','2','3'))]}"/>
                        <button name="cancel" string="Hủy" type="object" attrs="{'invisible':[('state', 'in', ('2','3'))]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_create" attrs="{'readonly':[('state', 'in', ('1','2','3'))]}"/>
                                <field name="ten_cv" attrs="{'readonly':[('state', 'in', ('1','2','3'))]}"/>
                                <field name="thuoc_kho" attrs="{'readonly':[('state', 'in', ('1','2','3'))]}"/>
                            </group>
                            <group>
                                <field name="note" attrs="{'readonly':[('state', 'in', ('1','2','3'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="nhansu" string="Nhân viên thực hiện">
                                <field name="nhan_su" attrs="{'readonly':[('state', 'in', ('1','2','3'))]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="work_phone"/>
                                        <field name="work_email"/>
                                        <field name="department_id"/>
                                        <field name="job_id" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="cong_viec_view_tree" model="ir.ui.view">
            <field name="name">cong.viec.tree</field>
            <field name="model">cong.viec</field>
            <field name="arch" type="xml">
                <tree string="Danh sách công việc">
                    <field name="date_create" optional="show"/>
                    <field name="thuoc_kho" optional="show"/>
                    <field name="ten_cv" optional="show"/>
                    <field name="nhan_su" optional="show"/>
                    <field name="note" optional="hide"/>
                    <field name="state" optional="show"/>

                </tree>
            </field>
        </record>

        <!-- action view kho bd-->
        <record id="action_view_cong_viec_bd" model="ir.actions.act_window">
            <field name="name">Công việc Bình Dương</field>
            <field name="res_model">cong.viec</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('thuoc_kho', '=', 'bd')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new ...
                </p>
            </field>
        </record>

        <!-- action view kho ct-->
        <record id="action_view_cong_viec_ct" model="ir.actions.act_window">
            <field name="name">Công việc Cần Thơ</field>
            <field name="res_model">cong.viec</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('thuoc_kho', '=', 'ct')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new ...
                </p>
            </field>
        </record>

        <menuitem id="menu_congviec" name="Quản lý công việc" sequence="1"
              web_icon="custom_b2c,static/src/img/congviec.png" groups="custom_b2c.group_ql,custom_b2c.group_bd,custom_b2c.group_ct,base.group_system"/>
        <menuitem id="sub_congviec_bd" name="Danh sách Bình Dương" parent="menu_congviec" action="action_view_cong_viec_bd"
              sequence="1" groups="custom_b2c.group_bd,base.group_system"/>
        <menuitem id="sub_congviec_ct" name="Danh sách Cần Thơ" parent="menu_congviec" action="action_view_cong_viec_ct"
              sequence="1" groups="custom_b2c.group_ct,base.group_system"/>
    </data>
</odoo>